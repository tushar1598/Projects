<head>
    <title>
        <%= title %>
    </title>
    <link rel="stylesheet" href="/css/add_interview.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/noty/3.1.4/noty.min.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/noty/3.1.4/noty.min.js"></script>
</head>

<%- include("_header")%>

    <% if(locals.user){ %>
        <h2>Add Interview</h2>
        <div id="parent">
            <form action="/interviews/Create" method="post">
                <label for="">Company Name</label>
                <input type="text" name="company" placeholder="company name" required>
                <label id="dt" for="">Date</label>
                <input id="date" type="text" name="date" placeholder="dd/mm/yyyy" onfocus="(this.type='date')" required>
                <input id="btn" type="submit" value="Add Interview">
            </form>
        </div>

        <% } %>


            <%- include("_footer")%>


                <script>

                <% if (flash.success && flash.success.length > 0) {%>

                        new Noty({
                            theme: "relax",
                            text: "<%= flash.success %>",
                            type: "success",
                            layout: "topRight",
                            timeout: 1500

                        }).show();
                
                
                <%}%>

                </script>